<h1>Books</h1>

<table class="table">
  <thead>
      <th>Title</th>
      <th>Body</th>
      <th></th>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
  </td>
</tr>
<% end %>
</tbody>

</table>