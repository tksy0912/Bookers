<h1>Books</h1>

<table class="table">
  <thead>
      <th>Title</th>
      <th>Body</th>
      <th></th>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
    <%= link_to "Show", book_path(book.id), class: "link" %>
    <%= link_to "Edit", edit_book_path(book.id), class: "link" %>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ", class: "link" %>
  </td>
</tr>
<% end %>
</tbody>

</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, size: 13 %>

  <h4>Body</h4>
  <%= f.text_area :body, size: 20 %>

  <p class="button-container"><%= f.submit 'Create Book', class: 'btn-style submit-btn' %></p>
<% end %>